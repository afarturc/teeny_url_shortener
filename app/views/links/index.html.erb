<div class="w-1/2 mx-auto">
    <div class="flex flex-col w-full items-center">
      <h1 class="font-bold text-4xl mb-12">Teeny URL shortener</h1>
      <%= turbo_frame_tag("new_short_link", src: new_link_path, class: "flex w-full mb-8") %>
      <div id="short_links" class="flex flex-col gap-3 w-full">
        <% @links.each do |link| %>
          <%= render partial: "link_card", locals: { link: link } %>
        <% end %>
      <div>
    </div>
</div>
