<%= turbo_frame_tag("new_short_link") do %>
    <%= form_with(model: @link, class: "flex flex-col md:flex-row items-center gap-2 w-full", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |form| %>
      <div class="md:w-3/4 w-full">
          <%= form.text_field :original_url, placeholder: "Enter link here", class: "block bg-slate-100 shadow rounded-md w-full" %>
      </div>
      <div class="md:w-1/4 w-full">
          <%= form.submit "Shorten URL", class: "w-full rounded-lg p-2 bg-blue-900 hover:bg-blue-800 text-white font-medium cursor-pointer shadow" %>
      </div>
    <% end %>
<% end %>
